generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Payment {
  id           Int      @id @default(autoincrement())
  payment_id   String
  status       String
  amount       Float
  payer_email  String?
  createdAt    DateTime @default(now())
}